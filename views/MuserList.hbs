                    </thead>
                    <tbody>
                    {{#each data}}
                        <tr><td>{{@index}}</td><td class="account">{{Account}}</td><td>{{UserName}}</td><td>{{Tel}}</td><td>{{Sex}}</td><td>{{IdNumber}}</td><td><img src="{{HeadPicture}}" width="80" height="80"></td><td>未评估</td><td><a class="btn btn-default" href="modifyuser?account={{Account}}" target="_blank">修改</a></td><td><button class="btn btn-default deleteuser">删除</button></td></tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

