                <table class="table">
                    <thead>
                    <tr><th>序号</th><th>订单号</th><th>购买用户账户</th><th>购买产品名称</th><th>被保人姓名</th><th>购买时间</th><th>当前收益</th><th>修改信息</th><th>删除</th></tr>
                    </thead>
                    <tbody>
                    {{#each data}}
                        <tr><td>{{@index}}</td><td class="orderid">{{OrderId}}</td><td class="account">{{BuyUserAccount}}</td><td>{{ProductName}}</td><td>{{InsuredPeopleName}}</td><td>{{BuyTime}}</td><td>{{NowIncome}}</td><td><a class="btn btn-default" href="modifyorder?orderid={{OrderId}}" target="_blank">修改</a></td><td><button class="btn btn-default deleteorder">删除</button></td></tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
