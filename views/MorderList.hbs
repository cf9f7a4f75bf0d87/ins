<script type="text/javascript">
    $(document).ready(function(){
        var index = {{index}}||0;
        var previous = 0, next=0;
        if(index>0){
            previous = index - 1;
        }
        var length ={{data.length}};
        if(length==10){
            next=index+1;
        }else{
            next=index;
        }
        $("#previous").attr("href","/manage/orderlist?index="+previous);
        $("#next").attr("href","/manage/orderlist?index="+next);
    });
</script>