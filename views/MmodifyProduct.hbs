<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            修改产品信息
        </div>
        <div class="panel-body">
            <p>在这里,您可以修改产品信息..</p>
        </div>

        {{#if data}}
            {{#each data}}
                <!--<div >{{data}}</div>-->
            <form role="form" action="" method="post">
                <div class="form-group">
                    <label for="productname">产品名称:</label>
                    <input type="text" class="form-control disabled" name="productname" id="productname" readonly="readonly" value="{{ProductName}}">
                </div>
                <div class="form-group">
                    <label for="productexplain">产品介绍:</label>
                    <input type="text" class="form-control" name="productexplain" id="productexplain"  value="{{ProductExplain}}">
                </div>
                <div class="form-group">
                    <label for="shortexplain">产品简介:</label>
                    <input type="text" class="form-control" name="shortexplain" id="shortexplain" value="{{ShortExplain}}">
                </div>
                <div class="form-group">
                    <label for="productprice">产品价格:</label>
                    <input type="text" class="form-control" name="productprice" id="productprice"  value="{{ProductPrice}}">
                </div>
                <div class="form-group">
                    <label for="salesvolume">销量:</label>
                    <input type="text" class="form-control" name="salesvolume" id="salesvolume"  value="{{SalesVolume}}">
                </div>
                <div class="form-group">
                    <label for="income">预期收入:</label>
                    <input type="text" class="form-control" name="income" id="income"  value="{{Income}}">
                </div>
                <div class="form-group">
                    <label for="money">赔偿金额:</label>
                    <input type="text" class="form-control" name="money" id="money"  value="{{Money}}">
                </div>
                <div class="form-group">
                    <label for="deadline">截止日期:</label>
                    <input type="date" class="form-control" name="deadline" id="deadline"  value="{{Deadline}}">
                </div>
                <div class="form-group">
                    <label for="producturl">产品图片:</label>
                    <img width="80" height="80" src="{{ProductUrl}}" class="img-circle"/>
                    <input type="text" class="form-control" name="producturl" id="producturl"  value="{{ProductUrl}}">
                </div>
                <button type="submit" class="btn btn-default">确认</button>
            </form>
            {{/each}}
        {{else}}
            <table class="table">
                <tbody>
                <tr><td><input type="text" class="input-lg form-control" placeholder="请输入要修改的产品的名称.." id="modifyproduct"></td><td><button class="btn btn-default btn-lg" id="start">确定</button></td></tr>
                </tbody>
            </table>
        {{/if}}

    </div>
</div>

<script src="//cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
